

<div class="panel panel-default">
  <div class="panel-heading"></div>
  <div class="panel-body form-horizontal">

    <%= simple_form_for(@policy) do |f| %>
        <% if @policy.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@policy.errors.count, "error") %> prohibited this policy from being saved:</h2>

              <ul>
                <% @policy.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
              </ul>
            </div>
        <% end %>
        <div class="form-group">
          <label class="col-lg-2 control-label">Reference</label>
          <div class="col-lg-10">
            <%= f.input :reference, :class => "form-control", :label => false %>
          </div>
        </div>


        <div class="form-group">
          <label class="col-lg-2 control-label">Name</label>
          <div class="col-lg-10">
            <%= f.input :name, :class => "form-control", :label => false %>
          </div>
        </div>

        <div class="form-group">
          <label class="col-lg-2 control-label">Description</label>
          <div class="col-lg-10">
            <%= f.input :description, :class => "form-control", :label => false, input_html: {rows: 10, cols: 80} %>
          </div>
        </div>


        <div class="form-group">
          <label class="col-lg-2 control-label">Effective Date</label>
          <div class="col-lg-10" style="width: 250px;">
            <%= f.input :effective_date, :as => :date_picker, :class => "form-control", :label => false %>
          </div>
        </div>

        <div class="form-group">
          <label class="col-lg-2 control-label">Expiration</label>
          <div class="col-lg-10" style="width: 250px;">
            <%= f.input :expire_date, :as => :date_picker, :class => "form-control", :label => false %>
          </div>
        </div>




        <div class="form-group">
          <div class="col-lg-offset-2 col-lg-10">
            <%= f.button :submit, :class => "btn btn-primary btn-sm" %>
          </div>

    <% end %>
    </div>
  </div>


