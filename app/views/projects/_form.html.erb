<div class="panel panel-default">
  <div class="panel-heading">Horizontal form</div>
  <div class="panel-body form-horizontal">


    <%= simple_form_for(@project) do |f| %>
        <%= f.error_notification %> <form class="form-horizontal">

   <div class="col-lg-7">



    <div class="form-group">
      <label class="col-lg-2 control-label viewlabel">Name</label>
      <div class="col-lg-10">
        <%= f.input :name, :class => "form-control", :label => false, :input_html => {:style=> 'width: 500px'} %>
      </div>


      <div class="form-group">
        <label class="col-lg-2 control-label viewlabel">Implementer</label>
        <div class="col-lg-10">
          <%= f.collection_select(:implementer_id, Implementer.all, :id, :name, include_blank: true, :class => "form-control") %>
        </div>
      </div>

      <div class="form-group">
        <label class="col-lg-2 control-label viewlabel">Project Type</label>
        <div class="col-lg-10">
          <%= f.collection_select(:project_type_id, ProjectType.all, :id, :name, include_blank: true, :class => "form-control") %>
        </div>
      </div>
    </div>
    <div class="form-group">
      <label class="col-lg-2 control-label viewlabel">Description</label>
      <div class="col-lg-10">
        <%= f.input :description, :class => "form-control", :label => false, input_html: {rows: 10, cols: 100} %>
      </div>
    </div>





    <div class="form-group">
       <label class="col-lg-2 control-label viewlabel">Province</label>
      <div class="col-lg-10">
        <%= f.collection_select(:province_id, Province.all, :id, :name, include_blank: true, :class => "form-control") %>
      </div>

    </div>




    <div class="form-group">
      <label class="col-lg-2 control-label viewlabel">City/Village</label>
      <div class="col-lg-10">

        <%= f.input :location, :class => "form-control", :label => false %>
      </div>
    </div>



    <div class="form-group">

      <label class="col-lg-2 control-label viewlabel">Lat</label>
      <div class="col-lg-10">
        <%= f.input :lat, :class => "form-control", :label => false %>

      </div>
    </div>



    <div class="form-group">

      <label class="col-lg-2 control-label viewlabel">Long</label>
      <div class="col-lg-10">
        <%= f.input :long, :class => "form-control", :label => false %>
      </div>
    </div>


    <div class="form-group">
      <label class="col-lg-2 control-label viewlabel">Project Value</label>
      <div class="col-lg-10">
        <%= f.input :project_value, :class => "form-control", :label => false, :size => "30" %>
      </div>
    </div>
     <div class="form-group">
       <label class="col-lg-2 control-label viewlabel">Total Expenditures</label>
       <div class="col-lg-10">
         <%= f.input :total_expended, :class => "form-control", :label => false, :size => "30" %>
       </div>
     </div>


</div>
    <div class="col-lg-5">


    <div class="form-group">
      <label class="col-lg-2 control-label">Plan Start</label>
      <div class="col-lg-10">
        <%= f.input :plan_start, :as => :date_picker, :class => "form-control", :label => false %>
      </div>
     </div>

      <div class="form-group">
        <label class="col-lg-2 control-label">Plan End</label>
         <div class="col-lg-10">

          <%= f.input :plan_end, :as => :date_picker, :class => "form-control", :label => false %>
        </div>
      </div>



    <div class="form-group">
      <label class="col-lg-2 control-label">Actual Start</label>
      <div class="col-lg-10">
          <%= f.input :actual_start, :as => :date_picker, :class => "form-control", :label => false %>
      </div>
    </div>


      <div class="form-group">

        <label class="col-lg-2 control-label">Actual End</label>
        <div class="col-lg-10">
             <%= f.input :actual_end, :as => :date_picker, :class => "form-control", :label => false %>
        </div>
      </div>





      <div class="form-group">
        <div class="col-lg-2">
          <%= f.input :calcfinancetasks, :class => "form-control", :label => false %>
        </div>
     <div class="col-lg-10">
          <label class="col-lg-6 control-label">Calculate Finances from Tasks:</label>
        </div>

      </div>


      <div class="form-group">
        <div class="col-lg-2">
          <%= f.input :calcscheduletasks, :class => "form-control", :label => false %>
        </div>

        <div class="col-lg-10">
          <label class="col-lg-6 control-label">Calculate Schedule from Tasks:</label>
        </div>
      </div>




    </div>

    <div class="form-group">
      <div class="col-lg-offset-2 col-lg-10">
        <%= f.button :submit, :class => "btn btn-primary btn-sm" %>

      </div>
    </div>










    <% end %>
  </div>
</div>

