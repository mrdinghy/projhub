


<div class="panel panel-default">
  <div class="panel-heading">Horizontal form</div>
  <div class="panel-body">

    <%= simple_form_for(@post) do |f| %>
        <%= f.error_notification %> <form class="form-horizontal">
    <div class="form-group">
      <label class="col-lg-2 control-label">Name</label>
      <div class="col-lg-10">
        <%= f.input :name, :class => "form-control", :label => false %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-lg-2 control-label">Description</label>
      <div class="col-lg-10">
        <%= f.input :description, :class => "form-control", :label => false %>
      </div>
    </div>




    <div class="form-group">
      <label class="col-lg-2 control-label"> <%= f.label :post_type %></label>
      <div class="col-lg-10">
        <%= f.select(:post_type, PostType.to_a, :class => "form-control") %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-lg-2 control-label">Value</label>
      <div class="col-lg-10">
        <%= f.input :post_value, :class => "form-control", :label => false %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-lg-2 control-label">Start</label>

      <div class="col-lg-10">
        <%= f.input :start_date, :as => :date_picker, :class => "form-control", :label => false %>
      </div>

    </div>

    <div class="form-group">
      <label class="col-lg-2 control-label">End</label>

      <div class="col-lg-10">
        <%= f.input :end_date, :as => :date_picker, :class => "form-control", :label => false %>
      </div>

    </div>



        <div class="form-group">
      <div class="col-lg-offset-2 col-lg-10">
        <%= f.button :submit, :class => "btn btn-primary btn-sm" %>

      </div>
    </div>










    <% end %>
    </div>
  </div>

