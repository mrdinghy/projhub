<p id="notice"><%= notice %></p>

<h1>Listing Project Stages</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @project_stages.each do |project_stage| %>
      <tr>
        <td><%= project_stage.name %></td>
        <td><%= project_stage.description %></td>
        <td><%= link_to 'Show', project_stage %></td>
        <td><%= link_to 'Edit', edit_project_stage_path(project_stage) %></td>
        <td><%= link_to 'Destroy', project_stage, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

